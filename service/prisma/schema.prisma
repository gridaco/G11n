generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model TextSet {
  @@map("text_sets")
  id String @id @default(auto()) @map("_id") @db.ObjectId 
  key String // "home"
  value Json
  projectId String @map("project_id") @db.ObjectId
  project Project @relation(fields: [projectId], references: [id])


  @@unique([projectId, key])
  @@unique([value, key])
  // locales String[]
  // embeddable Boolean // true
}

model Project{
  @@map("projects")
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  locales String[]
  texts TextSet[]
  // files FileSet[]
}


