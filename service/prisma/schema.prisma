generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Translation {
  id String @id @default(auto()) @map("_id") @db.ObjectId 
  key String
  value Json
}


